{% block body %}
{% include "AppBundle:Admin:menuAdmin.html.twig" %}

<div class="container addAdminPage">

  <div class="addAdminForm">
    <h5>ajouter un administrateur : </h5>

    {{ form_start(form) }}
      <div class="form-group">
        {{ form_label(form.firstname, ' prénom : ')}}
        {{ form_widget(form.firstname)}}
      </div>

      <div class="form-group">
        {{ form_label(form.lastname, ' nom : ')}}
        {{ form_widget(form.lastname)}}
      </div>

      <div class="form-group">
        {{ form_label(form.mail, ' email : ')}}
        {{ form_widget(form.mail)}}
      </div>

      <div class="form-group">
        {{ form_label(form.phoneNumber, ' téléphone : ')}}
        {{ form_widget(form.phoneNumber)}}
      </div>

      <div class="form-group">
        {{ form_label(form.avatar, ' photo : ')}}
        {{ form_widget(form.avatar)}}
      </div>

      <div class="form-group">
        {{ form_label(form.password, ' mot de passe : ')}}
        {{ form_widget(form.password)}}
      </div>

      <div class="form-group">
        {{ form_label(form.submit, ' prénom : ')}}
        {{ form_widget(form.submit,
          { 'attr': {
            'class' : 'btn'
          }}
        )}}
      </div>
    {{ form_end(form)}}
</div>

{% endblock %}
